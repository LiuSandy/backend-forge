{
  "name": "backend-forge-cli",
  "version": "1.0.6",
  "description": "基于 Fastify + TypeScript 的后端项目模板脚手架",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "forge": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "src",
    "tests",
    ".env.example",
    ".eslintrc.json",
    "tsconfig.json",
    "tsconfig.eslint.json",
    "PROJECT_README.md",
    "README.md",
    "LICENSE",
    "VERSION",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src cli scripts --ext .ts,.js",
    "lint:fix": "eslint src cli scripts --ext .ts,.js --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepare": "husky",
    "bump-version": "node scripts/bump-version.js",
    "prepublishOnly": "pnpm build && vitest run"
  },
  "keywords": [
    "fastify",
    "typescript",
    "scaffold",
    "backend",
    "template",
    "restful-api"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "execa": "^9.6.1",
    "fastify": "^4.26.0",
    "fastify-plugin": "^4.5.1",
    "picocolors": "^1.1.1",
    "pino": "^8.17.2",
    "prompts": "^2.4.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "pino-pretty": "^10.3.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
